<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp">

    <TextView
        android:id="@+id/tv_getout_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/FontSmall"
        android:text="휴가"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="4dp" />

    <LinearLayout
        android:id="@+id/block"
        android:layout_width="2dp"
        android:layout_height="12dp"
        android:layout_margin="16dp"
        android:background="@color/Grey"
        app:layout_constraintEnd_toStartOf="@id/tv_return_time"
        app:layout_constraintHorizontal_bias="0.300"
        app:layout_constraintStart_toEndOf="@id/tv_getout_type"
        tools:layout_editor_absoluteY="5dp" />

    <TextView
        android:id="@+id/tv_return_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/FontSmall"
        android:text="2018.10.31 06:30PM"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="4dp" />

</android.support.constraint.ConstraintLayout>